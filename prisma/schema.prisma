generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  year        String
  url         String   @unique
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Link {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  url         String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
